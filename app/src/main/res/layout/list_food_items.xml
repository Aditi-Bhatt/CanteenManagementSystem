<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:id="@+id/fooditemlayout"
    app:cardElevation="10dp">

    <FrameLayout
        android:background="@color/colorPrimary"
        android:layout_width="4dp"
        android:layout_height="match_parent" />
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <ImageView
            android:id="@+id/foodimage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:src="@mipmap/frontimage"
            android:layout_margin="5dp"/>

        <TextView
            android:id="@+id/fooditemname"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/foodimage"
            android:text="Food Item Name"
            android:layout_marginTop="10dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_below="@id/fooditemname"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/foodimage"
            android:text="Price"
            android:textStyle="bold" />

        <Button
            android:id="@+id/edititembtn"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:text="edit" />

        <Button
            android:id="@+id/deleteitembtn"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@+id/edititembtn"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:text="delete" />


    </RelativeLayout>




</androidx.cardview.widget.CardView>